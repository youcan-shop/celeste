{
  "name": "@youcan/celeste-vue",
  "type": "module",
  "version": "0.5.2",
  "author": "YouCan <tech@youcan.shop>",
  "keywords": [
    "youcan",
    "celeste"
  ],
  "main": "dist/index.js",
  "engines": {
    "node": ">=20.10.0"
  },
  "scripts": {
    "build": "pnpm type-check && pnpm build-only",
    "build-only": "vite build",
    "watch": "vite build --watch",
    "type-check": "vue-tsc -p tsconfig.check.json --noEmit",
    "type-gen": "vue-tsc --declaration  --emitDeclarationOnly",
    "test": "vitest",
    "release": "pnpm publish --access public",
    "storybook": "NODE_ENV=dev storybook dev -p 6006",
    "build-storybook": "NODE_ENV=dev storybook build"
  },
  "dependencies": {
    "@youcan/celeste-icons": "workspace:*",
    "@youcan/celeste-tokens": "workspace:*",
    "clsx": "^2.1.1",
    "radix-vue": "^1.9.12",
    "tinycolor2": "^1.6.0",
    "uniqid": "^5.4.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.3",
    "@storybook/addon-essentials": "^8.4.7",
    "@storybook/addon-interactions": "^8.4.7",
    "@storybook/addon-onboarding": "^8.4.7",
    "@storybook/blocks": "^8.4.7",
    "@storybook/test": "^8.4.7",
    "@storybook/vue3": "^8.4.7",
    "@storybook/vue3-vite": "^8.4.7",
    "@tsconfig/node20": "^20.1.4",
    "@types/jsdom": "^21.1.7",
    "@types/tinycolor2": "^1.4.6",
    "@types/uniqid": "^5.3.4",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "chromatic": "^11.22.1",
    "jsdom": "^25.0.1",
    "sass": "^1.83.1",
    "storybook": "^8.4.7",
    "unocss": "^0.65.4",
    "vite": "^6.0.7",
    "vite-plugin-dts": "^4.4.0",
    "vitest": "^2.1.8",
    "vue": "^3.5.13",
    "vue-docgen-api": "^4.79.2",
    "vue-tsc": "^2.2.0"
  }
}
